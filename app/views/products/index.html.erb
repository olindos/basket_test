<h1>Products list</h1>

<%= link_to "New product", new_product_path %>

<div class="col-md-6 col-md-offset-36">
  <table class="table">
    <thead>
      <tr>
        <th> Name </th>
        <th> Description </th>
        <th> Price </th>
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td>
            <%= link_to "Edit", edit_product_path(product) %>
            <%= link_to "Delete", product_path(product), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
